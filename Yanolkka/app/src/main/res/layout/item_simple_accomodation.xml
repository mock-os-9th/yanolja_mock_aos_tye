<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/iv_item_simple_accommodation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sample_accommodation"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_item_simple_accommodation_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sampleAccommodationName"
        android:layout_marginVertical="4dp"
        android:textSize="14sp"
        android:textColor="@color/textNormal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_baseline_star_24"/>

        <TextView
            android:id="@+id/tv_item_simple_accommodation_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textNormal"
            android:textStyle="bold"
            android:text="4.5"
            android:textSize="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textSmooth"
            android:text="/5"
            android:textSize="10dp"
            android:layout_gravity="bottom"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textNormal"
            android:text="@string/review"
            android:layout_marginStart="8dp"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/tv_item_simple_accommodation_reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textNormal"
            android:textStyle="bold"
            android:layout_marginStart="4dp"
            android:text="916"
            android:textSize="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textNormal"
            android:text="개"
            android:textSize="12dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forOneNight"
        android:layout_gravity="end"
        android:textSize="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <TextView
            android:id="@+id/tv_item_simple_accommodation_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorButton"
            android:textSize="14sp"
            android:text="65"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorButton"
            android:textSize="12dp"
            android:text="%"/>
        <TextView
            android:id="@+id/tv_item_simple_accommodation_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textNormal"
            android:layout_marginStart="2dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="58,900"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textNormal"
            android:textSize="14sp"
            android:text="원"/>
    </LinearLayout>
</LinearLayout>