<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorSearchBox"
    tools:context=".src.activities.reservation.ReservationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="@color/colorBackground"
        android:elevation="3dp">

        <ImageView
            android:id="@+id/iv_reservation_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/btn_back"
            android:onClick="onClickInReservation"/>

        <TextView
            android:id="@+id/tv_reservation_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/accommodationReservation"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_centerVertical="true"
            android:textColor="@color/textNormal"
            android:layout_toEndOf="@+id/iv_reservation_back"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorBackground"
                android:layout_marginBottom="4dp"
                android:paddingTop="16dp">

                <TextView
                    android:id="@+id/tv_reservation_accommodation_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="26sp"
                    android:textColor="@color/textNormal"
                    android:textStyle="bold"
                    android:text="@string/sampleAccommodationName"
                    android:layout_marginHorizontal="16dp"/>

                <TextView
                    android:id="@+id/tv_reservation_room_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/textNormal"
                    android:textSize="16sp"
                    android:text="일반실"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/lightGray"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingHorizontal="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/checkIn"
                            android:textColor="@color/textNormal"
                            android:layout_marginBottom="4dp"/>
                        <TextView
                            android:id="@+id/tv_reservation_check_in_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textNormal"
                            android:layout_marginVertical="1dp"
                            android:textStyle="bold"
                            android:text="2020.09.09"/>
                        <TextView
                            android:id="@+id/tv_reservation_check_in_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textNormal"
                            android:layout_marginVertical="1dp"
                            android:textStyle="bold"
                            android:text="(수)"/>
                        <TextView
                            android:id="@+id/tv_reservation_check_in_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textNormal"
                            android:textStyle="bold"
                            android:textSize="26sp"
                            android:text="14:00"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/arrow"
                        android:paddingBottom="20dp"
                        android:layout_marginHorizontal="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingHorizontal="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/checkOut"
                            android:textColor="@color/textNormal"
                            android:layout_marginBottom="4dp"/>
                        <TextView
                            android:id="@+id/tv_reservation_check_out_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="1dp"
                            android:textColor="@color/textNormal"
                            android:textStyle="bold"
                            android:text="2020.09.09"/>
                        <TextView
                            android:id="@+id/tv_reservation_check_out_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textNormal"
                            android:layout_marginVertical="1dp"
                            android:textStyle="bold"
                            android:text="(수)"/>
                        <TextView
                            android:id="@+id/tv_reservation_check_out_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textNormal"
                            android:textStyle="bold"
                            android:textSize="26sp"
                            android:text="20:00"/>
                    </LinearLayout>
                </LinearLayout>
                <HorizontalScrollView
                    android:id="@+id/sc_reservation_rental"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="16dp"
                    android:fillViewport="true"
                    android:scrollbars="none"
                    android:overScrollMode="never">

                    <LinearLayout
                        android:id="@+id/ll_rental_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="16dp"
                android:orientation="vertical"
                android:layout_marginVertical="4dp"
                android:background="@color/colorBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/textNormal"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:text="@string/reservationInfo"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/icon_lock"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp"
                        android:text="@string/usingSafeNumber"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginEnd="16dp"
                        android:text="@string/reservationName"/>

                    <EditText
                        android:id="@+id/et_reservation_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginEnd="16dp"
                            android:text="@string/reservationContact"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_reservation_contact"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:textSize="16sp"
                                android:inputType="phone"/>

                            <TextView
                                android:id="@+id/tv_btn_reservation_change_contact"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="4dp"
                                android:textColor="@color/textBlue"
                                android:layout_centerVertical="true"
                                android:textSize="16sp"
                                android:onClick="onClickInReservation"
                                android:text="변경"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_reservation_change_contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_btn_reservation_send_auth_code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:gravity="center"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="6dp"
                                android:background="@drawable/button_rect_accent"
                                android:textColor="@color/colorBackground"
                                android:textStyle="bold"
                                android:layout_marginEnd="4dp"
                                android:text="@string/sendAuthCode"/>

                            <EditText
                                android:id="@+id/et_reservation_auth_code"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/inputAuthCode"
                                android:enabled="false"
                                android:textSize="16sp"
                                android:inputType="phone"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_btn_reservation_change_contact_cancel"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginVertical="6dp"
                                android:layout_marginEnd="6dp"
                                android:paddingVertical="12dp"
                                android:textColor="@color/colorButton"
                                android:background="@drawable/button_rect_accent_borders"
                                android:textStyle="bold"
                                android:text="@string/cancel"
                                android:onClick="onClickInReservation"
                                android:gravity="center"/>
                            <TextView
                                android:id="@+id/tv_btn_reservation_change_contact_confirm"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginVertical="6dp"
                                android:paddingVertical="12dp"
                                android:textColor="@color/colorBackground"
                                android:background="@drawable/button_rect_gray"
                                android:textStyle="bold"
                                android:text="@string/confirm"
                                android:gravity="center"/>
                        </LinearLayout>
                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/cb_reservation_visitor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textNormal"
                        android:layout_marginVertical="8dp"
                        android:textSize="14sp"
                        android:text="@string/anotherPersonWillVisit"/>

                    <LinearLayout
                        android:id="@+id/ll_reservation_visitor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginVertical="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginVertical="8dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:layout_marginEnd="16dp"
                                android:text="@string/visitorName"/>

                            <EditText
                                android:id="@+id/et_reservation_visitor_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/necessaryWhenCheckIn"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginVertical="8dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:layout_marginEnd="16dp"
                                android:text="@string/visitorContact"/>

                            <EditText
                                android:id="@+id/et_reservation_visitor_contact"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/necessaryWhenGetMessage"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="@string/infoVisitor"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_btn_reservation_on_foot"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:paddingVertical="12dp"
                            android:textColor="@color/colorButton"
                            android:background="@drawable/btn_transition"
                            android:textStyle="bold"
                            android:text="@string/onFoot"
                            android:onClick="onClickInReservation"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/tv_btn_reservation_by_vehicle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingVertical="12dp"
                            android:textColor="@color/colorButton"
                            android:background="@drawable/btn_transition"
                            android:textStyle="bold"
                            android:text="@string/byVehicle"
                            android:onClick="onClickInReservation"
                            android:gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:paddingVertical="16dp"
                android:paddingHorizontal="16dp"
                android:background="@color/colorBackground"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textNormal"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="18sp"
                    android:text="@string/discountInfo"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/textNormal"
                        android:textSize="14sp"
                        android:text="@string/reservationPrice"/>
                    <TextView
                        android:id="@+id/tv_reservation_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textNormal"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/textNormal"
                        android:textSize="14sp"
                        android:text="@string/discountPrice"/>
                    <TextView
                        android:id="@+id/tv_reservation_discount_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textNormal"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/dot"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/textNormal"
                        android:textSize="14sp"
                        android:text="@string/coupon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/textSmooth"
                        android:text="적용 가능 쿠폰 없음"
                        android:textStyle="bold"/>
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/btn_arrow_right_blue"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/dot"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/textNormal"
                        android:textSize="14sp"
                        android:text="@string/affiliateDiscount"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/textSmooth"
                        android:text="최대 2,200원 할인"
                        android:textStyle="bold"/>
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/btn_arrow_right_blue"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/dot"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/textSmooth"
                        android:textSize="14sp"
                        android:text="@string/point"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/textSmooth"
                        android:text="보유 포인트 없음"
                        android:textStyle="bold"/>
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/btn_arrow_right_blue"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="16dp"
                    android:background="@color/lightGray"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/textNormal"
                        android:textSize="14sp"
                        android:text="@string/finalPrice"/>
                    <TextView
                        android:id="@+id/tv_reservation_final_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textNormal"
                        android:textSize="22sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="16dp"
                    android:background="@color/lightGray"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/kakaopay_ad"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/board_borders_white_no_paddings"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingVertical="16dp"
                            android:paddingHorizontal="16dp"
                            android:background="@color/colorSearchBox">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="@color/textNormal"
                                    android:textStyle="bold"
                                    android:text="@string/choosePayOption"/>
                                <TextView
                                    android:id="@+id/tv_reservation_pay_option"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="휴대폰"/>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_reservation_payment_info"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="8dp"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/lightGray" />
                        <RadioGroup
                            android:id="@+id/rg_reservation_payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="16dp"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/rb_reservation_kakaopay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="6dp"
                                android:drawableStart="@drawable/icon_kakaopay"
                                android:text="@string/kakaopay"/>
                            <RadioButton
                                android:id="@+id/rb_reservation_chai"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="6dp"
                                android:drawableStart="@drawable/icon_chai"
                                android:text="@string/chai"/>
                            <RadioButton
                                android:id="@+id/rb_reservation_card"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="6dp"
                                android:drawableStart="@drawable/icon_card"
                                android:text="@string/creditCard"/>
                            <RadioButton
                                android:id="@+id/rb_reservation_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="6dp"
                                android:drawableStart="@drawable/icon_phone"
                                android:text="@string/phonePay"/>
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="4dp"
                android:paddingTop="16dp"
                android:paddingBottom="32dp"
                android:background="@color/colorBackground"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textNormal"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="18sp"
                    android:text="@string/termsReservation"/>

                <CheckBox
                    android:id="@+id/cb_reservation_terms_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="12dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="@string/agreeAll"/>

                <LinearLayout
                    android:id="@+id/ll_reservation_terms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical"/>

                <TextView
                    android:id="@+id/tv_btn_reservation_pay"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/textSmooth"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:text="결제하기"
                    android:onClick="onClickInReservation"
                    android:textColor="@color/colorBackground"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textNormal"
                    android:layout_marginVertical="8dp"
                    android:textSize="12sp"
                    android:text="@string/limitationForTeens"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>