<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginHorizontal="2dp"
    android:background="@drawable/board_borders_white">

    <TextView
        android:id="@+id/tv_kid_idx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/kid"
        android:textSize="12sp"
        android:textColor="@color/textSmooth"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/textSmooth"
        android:layout_marginVertical="8dp"/>

    <TextView
        android:id="@+id/tv_kid_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/chooseAge"
        android:textSize="12sp"
        android:textColor="@color/textBlue"/>
</LinearLayout>