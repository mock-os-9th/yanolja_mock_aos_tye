<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".src.signin.fragments.ComfortableSignInFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        android:background="@color/lightGray"
        android:gravity="center"
        android:text="@string/ComfortableSignInNotice"
        android:textSize="12sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="40dp">

        <RelativeLayout
            android:id="@+id/rl_btn_comfortable_sign_in_phone_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_rect_accent"
            android:paddingVertical="12dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_phone_white"
                android:layout_toStartOf="@+id/tv_sign_in_phone_num"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tv_sign_in_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/signInPhoneNum"
                android:textColor="@color/colorBackground"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_btn_comfortable_sign_in_naver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_rect_naver"
            android:paddingVertical="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_naver"
                android:layout_toStartOf="@+id/tv_sign_in_naver"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tv_sign_in_naver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/signInNaver"
                android:textColor="@color/colorNaver"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_btn_comfortable_sign_in_payco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_rect_payco"
            android:paddingVertical="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_payco"
                android:layout_toStartOf="@+id/tv_sign_in_payco"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tv_sign_in_payco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/signInPayco"
                android:textColor="@color/colorPayco"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>